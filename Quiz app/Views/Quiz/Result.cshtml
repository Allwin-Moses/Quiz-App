@{
    ViewBag.Title = "Result";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }

    .result-box {
        background: rgba(255, 255, 255, 0.15);
        padding: 50px 70px;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(10px);
        text-align: center;
        max-width: 400px;
        width: 100%;
    }

    .result-box h2 {
        font-size: 3rem;
        margin-bottom: 20px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .result-box .score {
        font-size: 1.8rem;
        margin: 20px 0;
    }

    .celebration-emoji {
        font-size: 4rem;
        margin-bottom: 20px;
        display: inline-block;
    }

    .btn-primary {
        background-color: #ffd700;
        color: #333;
        border: none;
        padding: 14px 40px;
        font-size: 1.2rem;
        border-radius: 50px;
        font-weight: bold;
        box-shadow: 0 6px 15px rgba(255, 215, 0, 0.6);
        width: 100%;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

    .btn-primary:hover {
        background-color: #e6c200;
        color: #222;
        box-shadow: 0 10px 25px rgba(255, 215, 0, 0.8);
    }
</style>

<div class="result-box">
    <div class="celebration-emoji">🎉</div>
    <h2>Quiz Completed</h2>
    <p class="score">Your Score: <strong>@ViewBag.Score</strong> out of <strong>@ViewBag.Total</strong></p>
    <p class="time-taken">Time Taken: <strong>@String.Format("{0:mm\\:ss}", ViewBag.ElapsedTime)</strong></p>
    <a href="@Url.Action("Select", "Quiz")" class="btn btn-primary">Restart Quiz</a>
</div>

<script>
    (function () {
        // Replace current history state
        history.replaceState({ page: 'result' }, null, location.href);

        // Add a new state, so back goes here first
        history.pushState({ page: 'result' }, null, location.href);

        window.onpopstate = function (event) {
            // If the state is 'result', then user pressed back from result page
            if (event.state && event.state.page === 'result') {
                // Push the same state again to prevent going back further
                history.pushState({ page: 'result' }, null, location.href);
                // Redirect explicitly to Start page
                window.location.href = '@Url.Action("Start", "Quiz")';
            } else {
                // For safety, fallback to start page on any other back navigation
                window.location.href = '@Url.Action("Start", "Quiz")';
            }
        };
    })();
</script>
